{
  "name": "habba-registration",
  "version": "1.0.0",
  "description": "Volunteer Registration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "server": "cross-env NODE_ENV=development nodemon index.js",
    "client-install": "npm i --prefix client",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "cbuild": "npm clean-install --prefix client && npm run build --prefix client",
    "prod:eb": "npm run cbuild && npm clean-install && npm start",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix client && npm run build --prefix client"
  },
  "author": "Piyush Aryan",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crossenv": "^0.0.2-security",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "heroku-ssl-redirect": "^0.1.1",
    "html-pdf": "^2.2.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "node-mailjet": "^3.3.1",
    "path": "^0.12.7",
    "pdf-to-base64": "^1.0.3"
  }
}
